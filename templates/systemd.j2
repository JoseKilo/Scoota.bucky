[Unit]
Description=Bucky (A StatsD alternative)
After=syslog.target

[Service]
ExecStart= {{bucky_home}}/venv/bin/bucky --graphite-ip={{bucky_graphite_host}} --full-trace --log-level=INFO --collectd-types={{bucky_home}}/types.db --statsd-ip=0.0.0.0 --collectd-ip=0.0.0.0 --metricsd-ip=0.0.0.0 {{bucky_home}}/config
Restart=always
KillSignal=SIGQUIT
ExecReload=/bin/kill -s HUP $MAINPID

[Install]
WantedBy=multi-user.target
