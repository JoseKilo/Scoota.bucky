description "start/stop/control bucky"
start on started networking and filesystem
stop on runlevel [!2345]

# prevent thrashing - 10 restarts in 5 seconds
respawn
respawn limit 10 5

# Make a log available in /var/log/upstart/bucky.log
console log

exec {{bucky_home}}/venv/bin/bucky --graphite-ip={{bucky_graphite_host}} --full-trace --log-level=INFO --collectd-types={{bucky_home}}/types.db --statsd-ip=0.0.0.0 --collectd-ip=0.0.0.0 --metricsd-ip=0.0.0.0 {{bucky_home}}/config
